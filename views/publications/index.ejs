<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is publications page</h1>
            <p>all publications sites</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/publications/new">Add new publication</a>
            </p>
            <p>
                <form action="/publications" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Publication search" class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>
    
    <div class="row text-center" id="publication-grid">
        <% publications.forEach(function(publication){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= publication.image%>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= publication.name %></h5>
                        <!--<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
                        <a href="/publications/<%= publication._id%>" class="btn btn-primary">More info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    
    
    <!--display page number index-->
    <hr>
    <div class="row justify-content-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/publications">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/publications?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/publications?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/publications?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/publications?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
    
</div>

<% include ../partials/footer %>
