<% include ../partials/header %>

 

<div class="container">
    <div class="row justify-content-center"> 
        <div class="col-md-12 text-center">
            <h1>Create a new publication</h1>
        </div>
        
        <div class="col-sm-12 col-md-6 col-lg-8">
            <form id="add-publication-form" action="/publications" method="POST" enctype="multipart/form-data">
            <!--<form action="/publications" method="POST">-->
                <div class="form-group">
                    <label for="seriesNumber">Number # Publication</label>
                    <input class="form-control" id="seriesNumber" type="number" name = "publication[seriesNumber]" placeholder="">
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <textarea class="form-control" id="title" type="text" name = "publication[title]" form="add-publication-form" rows="3" cols="70"></textarea>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" type="text" name= "publication[description]" form="add-publication-form" rows="5" cols="70"></textarea>
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name= "image" placeholder="image url">-->
                <!--</div>-->
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="journal">Journal Abbreviation</label>
                    <input class="form-control" id="journal" type="text" name = "publication[journal]" placeholder="JACS/ACIE/OL...">
                </div>
                <div class="form-group">
                    <label for="citation">Citation</label>
                    <input class="form-control" id="citation" type="text" name = "publication[citation]" placeholder="Li, K.; Shao, X.; Tseng, L.; Malcolmson, S. J. J. Am. Chem. Soc. 2018, 140, 598.">
                </div>
                <div class="form-group">
                    <label for="url">Url</label>
                    <input class="form-control" type="text" name="publication[url]" id="url" placeholder="link to the publication">
                </div>
                <div class="form-group">
                    <label for="publicatedDate">PublicatedDate (no space between)</label>
                    <input class="form-control" type="text" name="publication[publicatedDate]" id="publicatedDate" placeholder="YYYY-mm-dd">
                </div>
                <div class="form-group">
                    <label for="publicatedAuthors">PublicatedAuthors</label>
                    <input class="form-control" type="text" name="publication[publicatedAuthors]" id="publicatedAuthors" placeholder="Kangnan Li, Xinxin Shao">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit</button>
                </div>
            </form>
            <a style="text-align:center" href="/publications">Add new publication</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>