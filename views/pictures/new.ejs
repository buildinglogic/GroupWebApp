<% include ../partials/header %>

 

<div class="container">
    <div class="row justify-content-center"> 

        <div class="col-md-12 text-center">
            <h1>Add a new picture</h1>
        </div> 
        
        <div class="col-sm-12 col-md-6 col-lg-8">
            <form id="add-picture-form" action="/pictures" method="POST" enctype="multipart/form-data">
            	
            	<div class="row">
                    <div class="col-md-6 mb-3">
                        <label for='belongsToType'>belongs to [publication/user]</label>
                        <input type="text" class="form-control" id="belongsToType" placeholder="user or publication" name="picture[belongsToType]">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for='whoOwns'>DOI/[user]username</label>
                        <input type="text" class="form-control" id="whoOwns" placeholder="10.1021/jacs.7b12213 or kangnan " name="picture[whoOwns]">
                    </div>
                </div> 

                <div class="form-group">
                    <label for="title">Title</label>
                    <textarea class="form-control" id="title" type="text" name = "picture[title]" form="add-picture-form" rows="2" cols="70"></textarea>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" type="text" name= "picture[description]" form="add-picture-form" rows="5" cols="70"></textarea>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
 
                <div class="form-group">
                      <label for="location">Picture Location</label>
                      <input class="form-control" id="location" type="text" name="picture[location]" placeholder="Durham, North Carolina, USA">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit</button>
                </div>
            </form>
            <a style="text-align:center" href="/pictures">Add new picture</a>
        </div>

    </div>
</div>



<% include ../partials/footer %>
